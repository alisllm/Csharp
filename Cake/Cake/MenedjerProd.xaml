        mc:Ignorable="d"
        Title="Менеджер по заказам" Height="549.333" Width="984">
    <Grid Margin="0,0,-6.667,-3" Background="#FFFF9933">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="573*"/>
            <ColumnDefinition Width="316*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" Height="429" Margin="10,0,10.333,46" VerticalAlignment="Bottom"/>
